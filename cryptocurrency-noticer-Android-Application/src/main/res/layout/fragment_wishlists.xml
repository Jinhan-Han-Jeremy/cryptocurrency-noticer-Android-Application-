<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width = "match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/background_grey">


        <LinearLayout
            android:id="@+id/graph_window"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="-2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"


                android:background="@color/background_black"

                android:text="Top 5 rates"
                android:textColor="@color/green"
                android:textSize="25dp"

                android:textStyle="bold"></TextView>

            <LinearLayout
                android:id="@+id/timebutton_layout"
                android:layout_width="match_parent"
                android:layout_height="32dp"

                android:layout_marginTop="190dp"

                android:orientation="horizontal"

                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/time_button"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:background="@color/button_grey"
                    android:gravity="center"

                    android:text="12hr"
                    android:textColor="@color/char_grey"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/time_button2"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:background="@color/button_grey"

                    android:text="1D"
                    android:textColor="@color/char_grey"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/time_button3"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:background="@color/button_grey"

                    android:text="1W"
                    android:textColor="@color/char_grey"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/time_button4"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:background="@color/button_grey"

                    android:text="1M"
                    android:textColor="@color/char_grey"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/time_button5"
                    android:layout_width="45dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:background="@color/button_grey"

                    android:text="1Y"
                    android:textColor="@color/char_grey"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_values"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:background="@color/background_black"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/graph_window"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"


                android:background="@color/background_black"

                android:text="Popular Wish Lists"
                android:textColor="@color/green"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    <ScrollView
        android:id="@+id/crypto_lists"
        android:layout_width="match_parent"
        android:layout_height="674dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintTop_toTopOf="@+id/graph_window">

    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/background_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemTextColor="@color/char_grey"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>